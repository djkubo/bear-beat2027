# APP
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Video Remixes DJ 2026"

# VIDEOS (descarga web) - Ruta en el servidor donde están los videos (géneros/carpetas).
# En producción: puede ser una carpeta sincronizada con Hetzner (rclone) para que web = FTP.
VIDEOS_PATH=./Videos Enero 2026

# SUPABASE
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key-aqui
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-aqui

# STRIPE
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PAYPAL (Opcional)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=...
PAYPAL_CLIENT_SECRET=...

# CONEKTA (México - Opcional)
NEXT_PUBLIC_CONEKTA_PUBLIC_KEY=key_...
CONEKTA_PRIVATE_KEY=key_...

# CLOUDFLARE R2 (Storage)
R2_ACCOUNT_ID=...
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...
R2_BUCKET_NAME=video-remixes-dj

# RESEND (Emails)
RESEND_API_KEY=re_...

# TWILIO (WhatsApp y SMS - Opcional)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# HETZNER STORAGE BOX (FTP para descargas)
# Docs: https://docs.hetzner.com/storage/storage-box/
# Host = uXXXXX.your-storagebox.de (cuenta principal) o uXXXXX-subN (subcuenta)
# Puerto 21 = FTP/FTPS, 22 = SFTP
HETZNER_STORAGEBOX_HOST=u540473.your-storagebox.de
HETZNER_STORAGEBOX_USER=u540473
HETZNER_STORAGEBOX_PASSWORD=tu_contraseña_hetzner_console
HETZNER_STORAGEBOX_PORT=21
HETZNER_STORAGEBOX_USE_FTPS=true
# Opcional: si usas otra URL para WebDAV (por defecto se usa https://HETZNER_STORAGEBOX_HOST)
# HETZNER_WEBDAV_URL=https://u540473.your-storagebox.de

# HETZNER ROBOT API (crear subcuenta automática por cada pago)
# Si defines estas 3 variables, al pagar se crea una subcuenta nueva en Hetzner (read-only) y se asigna al cliente.
# Usuario/contraseña del Robot: Robot → Settings → Web service and app settings.
# Storage Box ID: número del Storage Box (ej. u540473 → 540473). Ver GET /storagebox en la API.
HETZNER_STORAGEBOX_ID=540473
HETZNER_ROBOT_USER=tu_usuario_robot
HETZNER_ROBOT_PASSWORD=tu_contraseña_robot
